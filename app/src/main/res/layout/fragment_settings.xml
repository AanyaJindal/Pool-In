<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.aanyajindal.pool_in.SettingsFragment"
    android:padding="16dp"
    android:gravity="center">

    <info.hoang8f.widget.FButton
        android:id="@+id/btn_editProfile"
        android:text="Rate us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        fbutton:buttonColor="#757575"
        fbutton:shadowColor="#616161"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="5dp"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="#ffffff"
        />

    <info.hoang8f.widget.FButton
        android:id="@+id/btn_chPass"
        android:text="Change Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        fbutton:buttonColor="#616161"
        fbutton:shadowColor="#424242"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="5dp"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="#ffffff"/>

    <info.hoang8f.widget.FButton
        android:id="@+id/btn_logout"
        android:text="Logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        fbutton:buttonColor="#424242"
        fbutton:shadowColor="#212121"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="5dp"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="#ffffff"/>

</LinearLayout>
