<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <RadioGroup
        android:id="@+id/rg_category"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb_books"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Books" />

        <RadioButton
            android:id="@+id/rb_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notes" />

        <RadioButton
            android:id="@+id/rb_res"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Online Resources" />

        <RadioButton
            android:id="@+id/rb_stationery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stationery" />

        <RadioButton
            android:id="@+id/rb_car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Car Pooling" />

        <RadioButton
            android:id="@+id/rb_others"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Others" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/et_rbothers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Other Item Category"
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:visibility="gone"
            app:mtf_openKeyboardOnFocus="true"
            fbutton:met_floatingLabel="highlight"
            fbutton:met_iconLeft="@mipmap/ic_skill" />

    </RadioGroup>

</LinearLayout>