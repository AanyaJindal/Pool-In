<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.aanyajindal.pool_in.ItemFragment"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Profile"
            android:textColor="#000000"
            android:textSize="28dp"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/user_header"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Name"
            android:textColor="#FF6F00"
            android:textSize="16dp"
            android:id="@+id/user_name_header"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Barack Obama"
            android:textColor="#000000"
            android:textSize="20dp"
            android:id="@+id/user_name_value"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#FF6F00"
            android:layout_marginTop="16dp"
            android:text="Email ID"
            android:textSize="16dp"
            android:id="@+id/user_email_header"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="barack@gmail.com"
            android:textColor="#000000"
            android:textSize="20dp"
            android:id="@+id/user_email_value"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#000000" />

        <info.hoang8f.widget.FButton
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_contact_me"
            android:text="Contact Me"
            fbutton:buttonColor="#424242"
            fbutton:shadowColor="#212121"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"
            fbutton:cornerRadius="5dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:drawableLeft="@mipmap/ic_mail2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:textColor="#FF6F00"
            android:text="College"
            android:textSize="16dp"
            android:id="@+id/user_college_header"/>

        <TextView
                android:layout_weight="1.4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Massachusets Institute"
                android:textSize="20dp"
                android:id="@+id/user_college_value"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:textColor="#FF6F00"
            android:text="Location"
            android:textSize="16dp"
            android:id="@+id/user_location_header"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Boston"
            android:textColor="#000000"
            android:textSize="20dp"
            android:id="@+id/user_location_value"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#000000" />





    </LinearLayout>


</LinearLayout>
