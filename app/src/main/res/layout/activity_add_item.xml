<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:orientation="vertical"
    tools:context="com.aanyajindal.pool_in.AddItem">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Item"
        android:textColor="#000000"
        android:textSize="20dp"
        android:padding="10dp"
        android:textStyle="bold"
        android:gravity="center"
        android:id="@+id/item_header"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:padding="5dp"
        android:hint="Item Category"
        fbutton:met_floatingLabel="highlight"
        android:id="@+id/et_itemCategory"
        fbutton:met_iconLeft="@mipmap/ic_skill"
        android:textColor="#000000"
        app:mtf_openKeyboardOnFocus="true"
        android:focusable="false"
        />


    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:hint="Item Name"
        android:id="@+id/et_itemName"
        fbutton:met_floatingLabel="highlight"
        fbutton:met_iconLeft="@mipmap/ic_discuss"
        android:textColor="#000000"
        app:mtf_openKeyboardOnFocus="true"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:hint="Item Description"
        android:id="@+id/et_itemDesc"
        fbutton:met_floatingLabel="highlight"
        fbutton:met_iconLeft="@mipmap/ic_desc"
        android:textColor="#000000"
        app:mtf_openKeyboardOnFocus="true"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:hint="Item Tags"
        fbutton:met_floatingLabel="highlight"
        android:id="@+id/et_itemTags"
        fbutton:met_iconLeft="@mipmap/ic_tag"
        android:textColor="#000000"
        app:mtf_openKeyboardOnFocus="true"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:hint="Mode of Availability"
        fbutton:met_floatingLabel="highlight"
        android:id="@+id/et_itemMode"
        fbutton:met_iconLeft="@mipmap/ic_mode"
        android:textColor="#000000"
        app:mtf_openKeyboardOnFocus="true"
        android:focusable="false"
        />

    <Button
        android:id="@+id/btn_addItem"
        android:layout_gravity="bottom"
        android:text="ADD ITEM"
        android:elevation="2dp"
        android:padding="8dp"
        android:textColor="#ffffff"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:background="@color/colorSecondary"
        android:layout_height="wrap_content" />


</LinearLayout>
