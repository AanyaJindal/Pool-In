            android:layout_height="wrap_content" />
        <CheckBox
            android:id="@+id/cb_nosql"
            android:text="NoSqL Database"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <CheckBox
            android:id="@+id/cb_artInel"
            android:text="Artificial Intelligence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <CheckBox
            android:id="@+id/cb_machLearn"
            android:text="Machine Learning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <CheckBox
            android:id="@+id/cb_javas"
            android:text="Java Script"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    </ScrollView>

</LinearLayout>